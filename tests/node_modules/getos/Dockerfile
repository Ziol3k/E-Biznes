FROM debian:7.4

LABEL maintainer="William Blankenship <william.jblankenship@gmail.com>"

# Setup NodeSource Official PPA
RUN apt-get update && \
    apt-get install -y \
      apt-transport-https \
      build-essential \
      curl \
      lsb-release \
      python-all && \
    curl -sL https://deb.nodesource.com/setup | bash - && \
    apt-get update && \
    apt-get install -y nodejs && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

COPY . /usr/src/
WORKDIR /usr/src/

CMD ["node", "test.js"]
